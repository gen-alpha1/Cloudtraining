pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
    }

    stages {
        stage('Build') {
            steps {
                script {
		    echo 'Test begin'
                    // Build the Docker image
                    sh 'docker build -t genesisalpha456/hello ./helloWorld/'
		    echo 'This where the change happend'
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('', 'docker_hub') {
                        docker.image('genesisalpha456/hello').push('latest')
                    }
                }
            }
        }
	stage('Connect_ssh'){
	    steps {
		script {
			// Connect to the other instance using ssh
			sshagent(credentials: ['jenkins_ssh']){
			            // Connect to the other instance using ssh
	                sh '''mkdir -p ~/.ssh && chmod 0700 ~/.ssh
                       touch ~/.ssh/known_hosts && chmod 0644 ~/.ssh/known_hosts
                       ssh-keyscan -t rsa 138.197.116.169 >> ~/.ssh/known_hosts
                       ssh -o StrictHostKeyChecking=no jenkins@138.197.116.169'''
			}
		   }
		}
	}
    }
}

