pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
    }

    stages {
        stage('Build') {
            steps {
                script {
		    echo 'Test begin'
                    // Build the Docker image
                    sh 'docker build -t genesisalpha456/hello ./helloWorld/'
		    echo 'This where the change happend'
                }
            }
        }
        stage('Push') {
            steps {
                script {
			echo 'Woking on pushing the image to hub'
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('', 'docker_hub') {
                        docker.image('genesisalpha456/hello').push('latest')
                    }
                }
            }
        }
	stage('Connect_ssh'){
	    steps {
		script {
			// Connect to the other instance using ssh
			  echo'This will process the ssh connect to Mach2'          // Connect to the other instance using ssh
	                  sh '''ssh -i /root/.ssh/id_rsa_Mach2ssh root@18.222.164.185'''
			  sh '''docker pull genesisalpha456/hello:latest'''
			echo'Pulled image successfully and now trying to run the image'
			  sh '''docker run genesisalpha456/hello:latest'''
			
		   }
		}
	}
    }
}

