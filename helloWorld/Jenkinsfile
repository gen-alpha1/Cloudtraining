pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
	//SSH_CREDENTIALS = credentials('ssh_connect')
    }

    stages {
        stage('Build') {
            steps {
                script {
		    echo 'Test begin'
                    // Build the Docker image
                    sh 'docker build -t genesisalpha456/hello ./helloWorld/'
		    echo 'This where the change happend'
                }
            }
        }
        stage('Push') {
            steps {
                script {
			echo 'Woking on pushing the image to hub'
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('', 'docker_hub') {
                        docker.image('genesisalpha456/hello').push('latest')
                    }
                }
            }
        }
	stage('Connect_ssh'){
	    steps {
	        script {
	            sshagent(['ssh_connect']){
			      sh'''ls -a'''
			      sh'''pwd'''
	                // Connect to the other instance using ssh
	                // def sshUser = 'root'
	                // def sshKeyPath = '/var/lib/jenkins/workspace/job_1@tmp/private_key_8300527998234521403.key' // Update with correct path
	                // def mach2Host = '104.131.183.80'
	                // def mach2Port = 22 // SSH port (default is 22)
	                // sh 'ls'// Execute SSH command
	                // sh "ssh -i ${sshKeyPath} -p ${mach2Port} ${sshUser}@${mach2Host} 'echo Hello from mach1'"
	            }
	        }
	    }
	}
    }
}

